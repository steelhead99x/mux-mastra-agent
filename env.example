# Mux Mastra Agent - Unified Environment Configuration
# Copy this file to .env in the root directory
# This single .env file contains all environment variables for both frontend and backend

############################################
# Port Configuration
############################################
# Backend port (for both Mastra playground and custom Express server)
BACKEND_PORT=3001

# Frontend port (for React development server)
FRONTEND_PORT=3000

# Mastra playground port (when using mastra dev command)
MASTRA_PLAYGROUND_PORT=3001

############################################
# Development Configuration
############################################
NODE_ENV=development
HOST=0.0.0.0

############################################
# Mastra Mode Configuration
############################################
# Set to 'true' to enable Mastra playground mode (default in development)
# Set to 'false' to use custom Express server
MASTRA_PLAYGROUND=true

# Set to 'true' to force custom Express server mode
# This overrides MASTRA_PLAYGROUND
MASTRA_CUSTOM=false

############################################
# CORS Configuration
############################################
# Comma-separated list of allowed origins for the backend
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://stage-ai.streamingportfolio.com,https://ai.streamingportfolio.com

############################################
# Mastra Configuration
############################################
MASTRA_API_KEY=your_mastra_api_key_here

############################################
# AI Model Configuration
############################################
# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-haiku-latest

############################################
# Weather API Configuration
############################################
# National Weather Service - Free, No API Key Required
WEATHER_MCP_USER_AGENT=WeatherAgent/1.0 (media-vault-agent@streamingportfolio.com)

############################################
# Mux Video API Configuration
############################################
# Get credentials from https://dashboard.mux.com/settings
MUX_TOKEN_ID=your_mux_token_id_here
MUX_TOKEN_SECRET=your_mux_token_secret_here

# Playback policy for created assets: public | signed
MUX_PLAYBACK_POLICY=signed

# Upload method: Use MCP (true) or REST API (false)
# MCP uses the @mux/mcp package for uploads
# REST API uses direct Mux API calls (more reliable, recommended)
USE_MUX_MCP=false

# MCP configuration for Mux (only used if USE_MUX_MCP=true)
MUX_MCP_UPLOAD_ARGS=@mux/mcp,client=cursor,--tools=dynamic,--resource=video.uploads
MUX_MCP_ASSETS_ARGS=@mux/mcp,client=cursor,--tools=dynamic,--resource=video.assets
MUX_MCP_DATA_ARGS=@mux/mcp,client=cursor,--tools=dynamic,--resource=data.errors,--resource=data.metrics,--resource=data.video_views

# Timeout settings (in milliseconds)
MUX_CONNECTION_TIMEOUT=45000
MUX_VERIFY_TIMEOUT_MS=300000
MUX_VERIFY_POLL_MS=5000

# CORS origin for direct uploads
MUX_CORS_ORIGIN=https://www.streamingportfolio.com

# Toggle test mode for uploads
MUX_UPLOAD_TEST=false

############################################
# Text-to-Speech Configuration
############################################
# Deepgram API key for TTS
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_TTS_MODEL=aura-asteria-en

# TTS temporary directory
TTS_TMP_DIR=/tmp/tts

# Cleanup temporary files after processing
TTS_CLEANUP=true

############################################
# Base URLs (Optional Overrides)
############################################
MUX_HLS_BASE_URL=https://stream.mux.com
STREAMING_PORTFOLIO_BASE_URL=https://www.streamingportfolio.com

############################################
# Database Configuration (Optional)
############################################
DATABASE_URL=your_database_url_here

############################################
# Redis Configuration (Optional)
############################################
REDIS_URL=your_redis_url_here

############################################
# Frontend Environment Variables (VITE_ prefix)
############################################
# These variables are automatically loaded by Vite from the root .env file

# Mastra API Configuration for Frontend
VITE_MASTRA_API_HOST=http://localhost:3001
VITE_MUX_ANALYTICS_AGENT_ID=mux-analytics
VITE_WEATHER_AGENT_ID=video professional streaming media at paramount plus

# Mux Video Configuration for Frontend
VITE_MUX_ASSET_ID=
VITE_MUX_DEFAULT_ASSET_ID=
VITE_MUX_KEY_SERVER_URL=https://www.streamingportfolio.com/api/tokens
