# NPM configuration to prevent problematic native modules
build_from_source=false
cache_min=86400
prefer_offline=true
fund=false
audit=false
save-exact=true

; Allow optional dependencies so platform-native binaries (e.g., Rollup) install
optional=true

; Allow lifecycle scripts during image builds where needed
ignore-scripts=false

; Avoid setting a global prefix to prevent npm "prefix cannot be changed" errors
; cache and prefix will be controlled via Dockerfile ENV in the final image
