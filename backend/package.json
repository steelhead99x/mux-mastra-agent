{
  "name": "mux-analytics-agent-backend",
  "version": "1.0.0",
  "description": "Mastra backend server for Mux video analytics agent with AI-powered insights",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "./scripts/mastra-dev.sh",
    "dev:custom": "tsx --watch src/index.ts",
    "ensure-env": "./scripts/ensure-env-enhanced.sh",
    "post-build-env": "./scripts/post-build-env.sh",
    "restore-env": "./scripts/ensure-env-enhanced.sh",
    "check-env": "./scripts/check-env.sh",
    "build": "NODE_OPTIONS=--max-old-space-size=2048 npm run compile && npm run post-build-env",
    "build:test": "npm run test && NODE_OPTIONS=--max-old-space-size=2048 npm run compile && npm run post-build-env",
    "compile": "NODE_OPTIONS=--max-old-space-size=2048 tsc --build --verbose",
    "clean": "rm -rf dist .mastra",
    "prebuild": "npm run clean && npm run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then node dist/index.js; else npm run dev; fi",
    "start:prod": "npm run build && npm run start:production",
    "start:production": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test:agent": "npm run build && npx tsx src/scripts/test-weather-agent.ts",
    "test:claude": "npm run build && npx tsx src/scripts/test-claude.ts",
    "test:stt": "npm run build && npx tsx src/scripts/test-stt.ts",
    "test:tts": "npm run build && npx tsx src/scripts/test-tts.ts",
    "test:mcp": "vitest run src/test/mux-mcp-integration.test.ts",
    "test:mcp:watch": "vitest src/test/mux-mcp-integration.test.ts"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@anush008/tokenizers-linux-x64-musl": "^0.10.3",
    "@cartesia/cartesia-js": "^2.2.5",
    "@deepgram/sdk": "^4.11.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@mastra/chroma": "^0.11.13",
    "@mastra/core": "^0.20.2",
    "@mastra/fastembed": "^0.10.5",
    "@mastra/libsql": "^0.15.1",
    "@mastra/mcp": "^0.13.4",
    "@mastra/memory": "^0.15.6",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@mux/mcp": "^12.8.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "ai": "^5.0.0",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "mastra": "^0.15.1",
    "multer": "^2.0.2",
    "tsx": "^4.19.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@vitest/ui": "^3.2.4",
    "supertest": "^7.1.4",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
